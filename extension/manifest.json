{
  "manifest_version": 3,
  "name": "TubeChat AI",
  "version": "1.0",
  "description": "Chat with any YouTube video using RAG.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.youtube.com/*", "http://localhost:8000/*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}